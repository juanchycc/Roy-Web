---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout>
	<Header />
	<section id="inicio" class="relative flex min-h-screen w-full">
		<div class="bg-images-container flex w-full h-full">
			<div class="bg-image-left"></div>
			<div class="bg-image-right"></div>
		</div>

		<div class="relative flex flex-col items-center p-8 w-full text-center">
			<div class="absolute inset-0 flex flex-col w-full py-32">
				<h1 class="main-title">ROY</h1>
			</div>
		</div>
	</section>
	<section id="shows" style="height: 100vh; background-color: #181823;">
		<h1>Section 2</h1>
	</section>
	<section id="discografia" style="height: 100vh; background-color: #181823;">
		<h1>Section 3</h1>
	</section>
	<section id="multimedia" style="height: 100vh; background-color: #181823;">
		<h1>Section 4</h1>
	</section>
	<section id="bio" style="height: 100vh; background-color: #181823;">
		<h1>Section 4</h1>
	</section>
</Layout>

<style>
	.main-title {
		text-decoration: none;
		color: #0000e8;
		font-weight: bold;
		font-size: 8rem;
		text-shadow: 2px 1px 2px #820b45;
		padding: 0.3rem 0.8rem;
		transition:
			color 0.3s ease,
			text-shadow 0.3s ease;
		text-align: center;
		position: relative;
		z-index: 1;
	}

	.bg-images-container {
		display: flex;
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		z-index: -1; /* Ensure the background is behind the content */
	}

	.bg-image-left,
	.bg-image-right {
		height: 100%;
		width: 100%; /* Each image takes up half the width */
		background-size: cover;
		background-repeat: no-repeat;
		filter: blur(2px);
		-webkit-filter: blur(2px);
	}

	.bg-image-left {
		background-image: url("/images/roy_left.jpg");
		background-position: center left;
	}

	.bg-image-right {
		background-image: url("/images/roy_right.jpg");
		background-position: center right;
	}
</style>
