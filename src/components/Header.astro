---
import Instagram from "../assets/social_media/instagram.png";
import Youtube from "../assets/social_media/youtube.png";
import Spotify from "../assets/social_media/spotify.png";
---

<header class="desktop-header">
    <!-- Menu Toggle and Dropdown Wrapper -->
    <div class="menu-wrapper">
        <!-- Menu Toggle Button -->
        <div class="menu-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>

        <!-- Dropdown Navigation -->
        <nav id="nav-items">
            <a href="#shows">SHOWS</a>
            <a href="#discografia">DISCOGRAFIA</a>
            <a href="#multimedia">MULTIMEDIA</a>
            <a href="#bio">BIO</a>
        </nav>
    </div>

    <!-- Social Media Icons -->
    <div class="social-icons">
        <a
            href="https://www.spotify.com"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img src={Spotify.src} alt="Spotify" />
        </a>
        <a
            href="https://www.instagram.com"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img src={Instagram.src} alt="Instagram" />
        </a>
        <a
            href="https://www.youtube.com"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img src={Youtube.src} alt="YouTube" />
        </a>
    </div>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: transparent;
        opacity: 0.8;
        z-index: 1000;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Wrapper for toggle and dropdown */
    .menu-wrapper {
        position: relative;
        display: flex;
        flex-direction: column;
    }

    /* Navigation Styles */
    nav {
        position: absolute;
        top: 100%; /* Directamente debajo del botón */
        left: 0;
        background-color: #181823;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        display: none;
        flex-direction: column;
        gap: 0.5rem;
        z-index: 999;
        margin-top: -4px; /* Evita el "gap" entre el botón y el menú */
    }

    /* Mostrar menú cuando el cursor está sobre el botón o sobre el dropdown */
    .menu-wrapper:hover nav {
        display: flex;
    }

    nav a {
        text-decoration: none;
        color: #eeeeee;
        font-weight: bold;
        font-size: 1rem;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        transition:
            background-color 0.3s ease,
            color 0.3s ease;
    }

    nav a:hover {
        background-color: #0000e8;
        color: #ffffff;
    }

    /* Menu Toggle Button */
    .menu-toggle {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 25px;
        height: 20px;
        cursor: pointer;
        padding-bottom: 4px; /* Expande el área de detección */
    }

    .menu-toggle span {
        display: block;
        height: 3px;
        width: 100%;
        background-color: #eeeeee;
        border-radius: 2px;
        transition: all 0.3s ease;
    }

    /* Social Media Icons */
    .social-icons {
        display: flex;
        gap: 0.8rem;
        margin-right: 10px;
    }

    .social-icons a img {
        width: 20px;
        height: 20px;
        object-fit: cover;
        filter: brightness(0) invert(1);
        transition:
            transform 0.3s ease,
            filter 0.3s ease;
    }

    .social-icons a img:hover {
        transform: scale(1.05);
    }
</style>
