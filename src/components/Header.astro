---
import Instagram from "../assets/social_media/instagram.png";
import Youtube from "../assets/social_media/youtube.png";
import Spotify from "../assets/social_media/spotify.png";
---

<header>
    <div></div>
    <!-- Empty div to push nav to the center -->
    <nav>
        <a href="#shows">SHOWS</a>
        <a href="#discografia">DISCOGRAFIA</a>
        <a href="#multimedia">MULTIMEDIA</a>
        <a href="#bio">BIO</a>
    </nav>
    <div class="social-icons">
        <a
            href="https://www.spotify.com"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img src={Spotify.src} alt="Spotify" />
        </a>
        <a
            href="https://www.instagram.com"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img src={Instagram.src} alt="Instagram" />
        </a>
        <a
            href="https://www.youtube.com"
            target="_blank"
            rel="noopener noreferrer"
        >
            <img src={Youtube.src} alt="YouTube" />
        </a>
    </div>
</header>

<style>
    header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background-color: #181823; /* Change header background to black */
        opacity: 0.8;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        padding: 1rem;
        display: flex;
        justify-content: space-between; /* Space between nav and social icons */
        align-items: center;
    }

    nav {
        display: flex;
        gap: 1rem; /* Add spacing between buttons */
        margin: 0 auto; /* Center the navigation */
    }

    nav a {
        text-decoration: none;
        color: #0000e8;
        font-weight: bold;
        font-size: 1.2rem;
        text-shadow: 0.3px 0.3px 1px rgba(255, 255, 255, 0.5);
        padding: 0.3rem 0.8rem;
        transition:
            color 0.3s ease,
            text-shadow 0.3s ease;
    }

    nav a:hover {
        color: #eeeeee;
    }

    .social-icons {
        display: flex;
        gap: 0.8rem; /* Add spacing between social media icons */
        margin-right: 10px;
    }

    .social-icons a img {
        width: 20px;
        height: 20px;
        object-fit: cover;
        filter: brightness(0) invert(1); /* Change icons to white */
        transition:
            transform 0.3s ease,
            filter 0.3s ease;
    }

    /* Make the YouTube icon slightly larger */
    .social-icons a[href="https://www.youtube.com"] img
    {
        width: 22px; /* Slightly larger width */
        height: 22px; /* Slightly larger height */
    }

    .social-icons a img:hover {
        transform: scale(1.05); /* Slight zoom effect on hover */
    }

    body {
        margin: 0;
        padding-top: 0;
    }
</style>
